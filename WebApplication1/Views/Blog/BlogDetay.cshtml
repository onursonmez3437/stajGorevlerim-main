@model WebApplication1.Models.siniflar.BlogYorum
@{
    ViewBag.Title = "BlogDetay";
    Layout = "~/Views/Shared/_TestLayout.cshtml";
}
<!DOCTYPE HTML>
<html>
<head>
    <title>Personal Blog a Blogging Category Flat Bootstarp  Responsive Website Template | Single :: w3layouts</title>
    <link href="~/web2/css/bootstrap.css" rel='stylesheet' type='text/css' />
    <link href="~/web2/css/style.css" rel='stylesheet' type='text/css' />
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="keywords" content="Personal Blog Responsive web template, Bootstrap Web Templates, Flat Web Templates, Andriod Compatible web template,
	Smartphone Compatible web template, free webdesigns for Nokia, Samsung, LG, SonyErricsson, Motorola web design" />
    <script type="application/x-javascript"> addEventListener("load", function() { setTimeout(hideURLbar, 0); }, false); function hideURLbar(){ window.scrollTo(0,1); } </script>
    <!----webfonts---->
    <link href='http://fonts.googleapis.com/css?family=Oswald:100,400,300,700' rel='stylesheet' type='text/css'>
    <link href='http://fonts.googleapis.com/css?family=Lato:100,300,400,700,900,300italic' rel='stylesheet' type='text/css'>
    <!----//webfonts---->
    <script src="http://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
    <!--end slider -->
</head>
<body>
    <!---header---->
    <div class="header">
    </div>
    <!--/header-->
    <div class="single">
        <div class="container">
            <div class="col-md-8 single-main">
                <div class="single-grid">
                    @foreach (var x in Model.Deger3)
                    {
                        <img src="@x.BlogImage" style="margin-bottom:20px;" />
                        <h5>@x.Aciklama</h5>

                    }
                    <br />
                </div>
                @foreach (var y in Model.Deger2)
                {
                    <ul class="comment-list">
                        <li>
                            <img src="~/web2/images/avatar.png" class="img-responsive" alt="">
                            <div class="desc">
                                <p><span style="font-weight: bold; color: black;">@y.KullaniciAdi</span> : @y.Yorum</p>
                            </div>
                            <div class="clearfix"></div>
                        </li>
                    </ul>
                }
                <div class="content-form">
                    <h3>BİR YORUM YAPIN</h3>
                    <form>
                        <input type="text" placeholder="Kullanıcı adı" required />
                        <input type="text" placeholder="Email" required />
                        <input type="text" placeholder="Yorum" required />
                        <textarea placeholder="Yorum"></textarea>
                        <input type="submit" value="Gönder" />
                    </form>
                </div>
            </div>
            <div class="col-md-4 side-content">
                <div class="recent">
                    <div class="recent">
                        <h3>SON BLOGLAR</h3>
                        @foreach (var y in Model.Deger3) // y değişkenim Model.Deger 3 kadar çalışsın demek
                        {<ul>
                                <li>
                                    <a href="#">
                                        Sondan @y.Baslik. Blog , Yayınlanma Tarihi: @y.Tarih.ToString("dd.MM.yyyy") 
                                    </a>
                                </li>
                            </ul>
                        }
                    </div>
                    <div class="comments">
                        <h3>SON YORUMLAR</h3>
                        <ul>
                            <li><a href="#">Amada Doe </a> on <a href="#">Hello World!</a></li>
                            <li><a href="#">Peter Doe </a> on <a href="#">Photography</a></li>
                            <li><a href="#">Steve Roberts</a> on <a href="#">HTML5/CSS3</a></li>
                        </ul>
                    </div>
                </div>
            </div>

            <div class="clearfix"></div>
        </div>
    </div>
</body>
</html>