@model List<WebApplication1.Models.siniflar.Nedir>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_TestLayout.cshtml";

    // ID'si 1 olan öğeyi filtrele
    var filteredModel = Model.Where(x => x.ID == 2).ToList();
}
<head>
    <title>Photier Staj Sitem</title>
    <link href="~/web2/css/bootstrap.css" rel='stylesheet' type='text/css' />
    <link href="~/web2/css/style.css" rel='stylesheet' type='text/css' />
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="keywords" content="Personal Blog Responsive web template, Bootstrap Web Templates, Flat Web Templates, Andriod Compatible web template,
	Smartphone Compatible web template, free webdesigns for Nokia, Samsung, LG, SonyErricsson, Motorola web design" />

</head>
<style>
    .bold-paragraph {
        color: #000000 !important;
    }
</style>
<style>
    .sticky {
        position: fixed;
        right: 50px; /* Sayfanın sağından 50px boşluk bırak */
        width: 350px; /* Sabit genişlik ayarla */
        bottom: 200px; /* Sayfanın altından 50px boşluk bırak */
    }
</style>
<body>
    <div class="single">
        <div class="container">
            <div class="col-md-8 single-main">
                <h2>Content Delivery Network (CDN) Nedir?</h2>

                @foreach (var x in filteredModel)
                {
                    <div class="single-grid">
                        <p class="bold-paragraph">@x.aciklama</p>
                        <img src="@x.ekAciklama" alt="" style="margin-buttom:20px;" />
                        <br> </br>
                        <ul>
                            <li><strong>Daha Hızlı Yükleme Süreleri:</strong> İçerik, kullanıcının bulunduğu lokasyona en yakın sunucudan iletildiği için sayfalar daha hızlı yüklenir.</li>
                            <li><strong>Sunucu Yükünü Azaltır:</strong> CDN, birincil sunucudaki yükü dağıtarak daha dengeli bir trafik yönetimi sağlar.</li>
                            <li><strong>Daha İyi Güvenlik:</strong> DDoS saldırılarına karşı koruma, SSL/TLS sertifikaları ve güvenlik duvarları sunar.</li>
                            <li><strong>Daha Geniş Erişim:</strong> Küresel sunucu ağı sayesinde dünya çapında daha tutarlı ve hızlı erişim sağlar.</li>
                        </ul>
                        <br />
                        <img src="@x.imageUrl2" alt="" style="margin-buttom:20px;" />
                        <br />
                        <p class="bold-paragraph">@x.aciklama3</p>
                    </div>
                }
            </div>
            <div class="col-md-4 side-content">
                <div class="col-md-4 side-content sticky">
                    <div class="recent">
                        <h3>SON NEDİRLER</h3>
                        <table border="1" style="width: 100%; text-align: left;">
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.konu</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                    <div class="comments">
                        <h3>SON YORUMLAR</h3>
                        <ul>
                            <li><a href="#">Amada Doe </a> on <a href="#">Hello World!</a></li>
                            <li><a href="#">Peter Doe </a> on <a href="#">Photography</a></li>
                            <li><a href="#">Steve Roberts</a> on <a href="#">HTML5/CSS3</a></li>
                        </ul>
                    </div>
                </div>

            </div>
        </div>
    </div>
</body>
</html>